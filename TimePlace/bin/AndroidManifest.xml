<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.app.time"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application android:name="com.app.time.TimeApplication"
        android:allowBackup="true"
        android:icon="@drawable/clock"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:logo="@drawable/clock">
        <activity
            android:name="com.app.time.MainActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.time.QuestionActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_question" >
        </activity>
    </application>

</manifest>
