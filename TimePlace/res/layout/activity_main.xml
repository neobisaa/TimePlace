<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/BackGroundWheel1"
        style="@anim/rotate_around_center_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/shest" />
    
    <ImageView
        android:id="@+id/BackGroundWheel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BackGroundWheel1"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="102dp"
        android:adjustViewBounds="false"
        android:scaleType="center"
        android:src="@drawable/shest" />

    <Button
        android:id="@+id/multiplayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/singleplayerButton"
        android:layout_alignRight="@+id/singleplayerButton"
        android:layout_alignTop="@+id/BackGroundWheel1"
        android:layout_marginTop="15dp"
        android:text="Multiplayer" />

    <Button
        android:id="@+id/singleplayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/multiplayerButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="77dp"
        android:text="Singleplayer" />

</RelativeLayout>